<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.leemay.mall.sys.system.mapper.SysPermissionMapper">
    <resultMap id="BaseResultMap" type="cn.leemay.mall.common.data.entity.system.SysPermission">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="keyword" property="keyword"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_delete" property="isDelete"/>
    </resultMap>
    <sql id="Base_Column_List">
        id
        ,
        name,
        keyword,
        description,
        create_time,
        update_time,
        is_delete
    </sql>
    <select id="selectListByUser" resultMap="BaseResultMap">
        SELECT p.id      id,
               p.name    name,
               p.keyword keyword
        FROM sys_user AS u
                 LEFT JOIN sys_user_role AS ur
                           ON u.id = ur.sys_user_id
                 LEFT JOIN sys_role AS r
                           ON r.id = ur.sys_role_id
                 LEFT JOIN sys_role_permission AS rp
                           ON r.id = rp.sys_role_id
                 LEFT JOIN sys_permission AS p
                           ON p.id = rp.sys_permission_id
        WHERE u.id = #{sysUserId}
    </select>
</mapper>