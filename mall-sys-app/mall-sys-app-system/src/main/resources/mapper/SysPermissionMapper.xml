<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.leemay.mall.sys.system.mapper.SysPermissionMapper">
    <resultMap id="BaseResultMap" type="cn.leemay.mall.common.data.entity.system.SysPermission">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="keyword" property="keyword"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_delete" property="isDelete"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,
        name,
        keyword,
        description,
        create_time,
        update_time,
        is_delete
    </sql>
    <select id="selectListByUser" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_permission
        where is_delete = 0
          and sys_user_id = #{sysUserId}
    </select>
</mapper>